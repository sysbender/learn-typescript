{
  "compilerOptions": {
    "target": "ES2020", // Good for modern browsers
    "module": "ESNext", // Let Parcel handle module bundling
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true, // Helps with module safety
    "jsx": "preserve" // Optional, only needed for JSX support
  },
  "include": ["*/**/*.ts"]
}
